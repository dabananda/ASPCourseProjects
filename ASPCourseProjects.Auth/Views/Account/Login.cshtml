@model ASPCourseProjects.Auth.Models.ViewModels.LoginViewModel

<div class="container">
    <div class="w-50 mx-auto">
        <h2 class="text-center">Register</h2>
        <form method="POST">
            <div class="mb-3">
                <label class="form-label" for="username">Username</label>
                <input asp-for="Username" class="form-control" type="text" name="username" placeholder="Enter username" />
            </div>
            <div class="mb-3">
                <label class="form-label" for="password">Password</label>
                <input asp-for="Password" class="form-control" type="password" name="password" placeholder="Enter password" />
            </div>
            <button type="submit" class="btn btn-primary">Login</button>
        </form>
    </div>
</div>